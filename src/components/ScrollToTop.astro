---
// Scroll to top button component
---

<button
  id="scroll-to-top"
  aria-label="Scroll to top"
  class="scroll-to-top"
  type="button"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    width="20"
    height="20"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
  >
    <polyline points="18 15 12 9 6 15"></polyline>
  </svg>
</button>

<style>
  .scroll-to-top {
    position: fixed;
    bottom: 2rem;
    right: 2rem;
    width: 3rem;
    height: 3rem;
    border-radius: 50%;
    background-color: var(--accent);
    color: var(--text-card);
    border: 2px solid var(--border-card-strong);
    box-shadow: var(--shadow-surface);
    cursor: pointer;
    opacity: 0;
    visibility: hidden;
    transform: translateY(1rem);
    transition: all 0.3s ease-out;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .scroll-to-top.visible {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .scroll-to-top:hover {
    background-color: var(--olive-700);
    transform: translateY(-0.25rem);
    box-shadow: var(--shadow-overlay);
  }

  .scroll-to-top:active {
    transform: translateY(0);
  }

  .scroll-to-top:focus-visible {
    outline: none;
    ring: 2px;
    ring-color: color-mix(in oklab, var(--olive-700) 40%, #fff);
    ring-offset: 2px;
    ring-offset-color: var(--paper);
  }

  @media (prefers-reduced-motion: reduce) {
    .scroll-to-top {
      transition: opacity 0.1s ease-out, visibility 0.1s ease-out;
    }

    .scroll-to-top:hover {
      transform: none;
    }

    .scroll-to-top:active {
      transform: none;
    }
  }

  @media (max-width: 640px) {
    .scroll-to-top {
      bottom: 1.5rem;
      right: 1.5rem;
      width: 2.75rem;
      height: 2.75rem;
    }
  }
</style>

<script>
  // Show/hide scroll to top button based on scroll position
  const scrollButton = document.getElementById('scroll-to-top');
  const showButtonThreshold = 300; // Show button after scrolling 300px

  if (scrollButton) {
    // Check scroll position on page load
    const checkScrollPosition = () => {
      const scrolled = window.scrollY || window.pageYOffset;
      if (scrolled > showButtonThreshold) {
        scrollButton.classList.add('visible');
      } else {
        scrollButton.classList.remove('visible');
      }
    };

    // Listen for scroll events
    window.addEventListener('scroll', checkScrollPosition, { passive: true });

    // Check initial position
    checkScrollPosition();

    // Scroll to top when button is clicked
    scrollButton.addEventListener('click', () => {
      window.scrollTo({
        top: 0,
        behavior: 'smooth'
      });
    });
  }
</script>
