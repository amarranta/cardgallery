---
/**
 * Theme toggle component - switches between dark (default) and light themes
 */
---
<button
  type="button"
  class="theme-toggle"
  data-theme-toggle
  aria-label="Toggle theme"
  title="Toggle theme"
>
  <!-- Sun icon (shown in dark mode, click for light) -->
  <svg class="theme-toggle__icon theme-toggle__icon--sun" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <circle cx="12" cy="12" r="5"/>
    <line x1="12" y1="1" x2="12" y2="3"/>
    <line x1="12" y1="21" x2="12" y2="23"/>
    <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"/>
    <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"/>
    <line x1="1" y1="12" x2="3" y2="12"/>
    <line x1="21" y1="12" x2="23" y2="12"/>
    <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"/>
    <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"/>
  </svg>
  <!-- Moon icon (shown in light mode, click for dark) -->
  <svg class="theme-toggle__icon theme-toggle__icon--moon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"/>
  </svg>
</button>

<style>
  .theme-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 2.5rem;
    height: 2.5rem;
    border-radius: 9999px;
    border: 1px solid var(--border-toggle);
    background: var(--surface-toggle);
    color: var(--text-toggle-strong);
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .theme-toggle:hover {
    border-color: var(--border-toggle-hover);
    background: var(--state-hover-forest);
    transform: translateY(-1px);
  }

  .theme-toggle:focus-visible {
    outline: none;
    ring: 2px solid var(--state-focus-ring);
    ring-offset: 2px;
  }

  .theme-toggle__icon {
    width: 1.25rem;
    height: 1.25rem;
    transition: opacity 0.2s ease, transform 0.3s ease;
  }

  /* Dark theme (default): show sun icon */
  .theme-toggle__icon--sun {
    display: block;
  }
  .theme-toggle__icon--moon {
    display: none;
  }

  /* Light theme: show moon icon */
  :global(html.light) .theme-toggle__icon--sun {
    display: none;
  }
  :global(html.light) .theme-toggle__icon--moon {
    display: block;
  }
</style>

<script>
  function initThemeToggle() {
    const toggle = document.querySelector('[data-theme-toggle]');
    if (!toggle) return;

    // Check saved preference
    const savedTheme = localStorage.getItem('theme');
    if (savedTheme === 'light') {
      document.documentElement.classList.add('light');
    }

    toggle.addEventListener('click', () => {
      const isLight = document.documentElement.classList.toggle('light');
      localStorage.setItem('theme', isLight ? 'light' : 'dark');
    });
  }

  // Initialize on load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initThemeToggle);
  } else {
    initThemeToggle();
  }
</script>
