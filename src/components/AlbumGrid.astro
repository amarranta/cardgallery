---
import AlbumCard from './AlbumCard.astro';

type AlbumSummary = {
  slug: string;
  name: string;
  items: { thumbUrl?: string; title?: string }[];
};

interface AlbumGridProps {
  albums?: AlbumSummary[];
}

const { albums = [] } = Astro.props as AlbumGridProps;
---
<section class="section-shell grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 2xl:grid-cols-5">
  {albums.length === 0 ? (
    <p class="col-span-full panel-muted">
      No folders available yet.
    </p>
  ) : (
    albums.map(album => <AlbumCard album={album} />)
  )}
</section>
