---
interface HeaderAction {
  label: string;
  href: string;
}

interface ViewHeaderProps {
  title: string;
  subtitle: string;
  backHref?: string | null;
  backLabel?: string;
  actions?: HeaderAction[];
  'data-i18n-type'?: 'album' | 'tag' | 'page';
}

const {
  title,
  subtitle,
  backHref = null,
  backLabel = 'Back to all folders',
  actions = [],
  'data-i18n-type': i18nType
} = Astro.props as ViewHeaderProps;
---
<header class="flex flex-col gap-4 border-b border-profile bg-gradient-to-b from-surface-header to-gradient-warm-soft px-6 py-6 md:flex-row md:items-end md:justify-between md:px-9">
  <div class="flex flex-col gap-3">
    {backHref && (
      <a class="inline-flex items-center gap-2 text-sm font-semibold text-accent transition hover:-translate-x-0.5" href={backHref}>
        <span aria-hidden="true">‚Üê</span>
        <span data-i18n-back="true">{backLabel}</span>
      </a>
    )}
    <div>
      <h2 class="text-2xl font-bold" data-i18n-title="true" data-i18n-type={i18nType}>{title}</h2>
      <p class="mt-2 text-sm text-muted" data-i18n-subtitle="true" data-i18n-type={i18nType}>{subtitle}</p>
    </div>
  </div>
  {actions.length > 0 && (
    <div class="flex items-center gap-3">
      {actions.map(action => (
        <a class="btn" data-tone="tonal" href={action.href}>
          {action.label}
        </a>
      ))}
    </div>
  )}
</header>
