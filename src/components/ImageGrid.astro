        window.setTimeout(() => {
          if (this.overlay) {
            this.overlay.style.transition = '';
          }
          if (this.swipeArea) {
            this.swipeArea.style.transition = '';
          }
          this.closeBtn?.focus();
        }, 300);
      });
    }

    closeLightboxWithAnimation() {
      if (!this.overlay || this.overlay.classList.contains('hidden')) return;
      
      // Animate content (image) up and out
      if (this.swipeArea) {
        this.swipeArea.style.transition = 'transform 0.3s cubic-bezier(0.4, 0.0, 1, 1)';
        this.swipeArea.style.transform = 'translateY(-80px) scale(0.9)';
        this.swipeArea.classList.remove('is-touching');
      }
      
      // Fade out the background overlay
      this.overlay.style.transition = 'opacity 0.3s cubic-bezier(0.4, 0.0, 1, 1)';
      this.overlay.style.opacity = '0';
      
      // Reset swipe state immediately
      this.swipeState = null;
      
      // Close after animation
      window.setTimeout(() => {
        this.closeLightbox();
        // Reset transform for next time
        if (this.overlay) {
          this.overlay.style.transition = '';
          this.overlay.style.opacity = '';
        }
        if (this.swipeArea) {
          this.swipeArea.style.transition = '';
          this.swipeArea.style.transform = '';
        }
      }, 300);
    }

    closeLightbox() {
      if (!this.overlay || this.overlay.classList.contains('hidden')) return;
      this.overlay.classList.add('hidden');
      this.overlay.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = this.previousOverflow;
      window.removeEventListener('keydown', this.handleKeyDown);
      window.removeEventListener('popstate', this.handlePopState);
      
      // Restore URL to parent page (remove /postcard/[id])
      const currentPath = window.location.pathname;
      if (currentPath.includes('/postcard/')) {
        const baseRaw = this.base || '/';
        const baseWithSlash = baseRaw.endsWith('/') ? baseRaw : `${baseRaw}/`;
        // Try to go back in history, or navigate to parent
        if (window.history.state?.fromLightbox) {
          window.history.back();
        } else {
          window.history.replaceState(null, '', baseWithSlash + 'postcards');
        }
      }
      
      const trigger = this.triggers[this.activeIndex];
      if (trigger) {
        trigger.focus({ preventScroll: true });
      }
    }

    /**
     * @param {number} direction
     */
    step(direction) {
      if (this.items.length < 2) return;
      this.activeIndex = (this.activeIndex + direction + this.items.length) % this.items.length;
      this.updateOverlayContent();
      this.updateUrlForIndex(this.activeIndex, true);
    }

    /**
     * @param {number} index
     * @param {boolean} replace
     */
    updateUrlForIndex(index, replace) {
      const item = this.rawItems[index];
      if (!item || !item.id) return;
      
      const baseRaw = this.base || '/';
      const baseWithSlash = baseRaw.endsWith('/') ? baseRaw : `${baseRaw}/`;
      const newUrl = `${baseWithSlash}postcard/${item.id}`;
      
      if (replace) {
        window.history.replaceState({ fromLightbox: true, index }, '', newUrl);
      } else {
        window.history.pushState({ fromLightbox: true, index }, '', newUrl);
      }
    }

    /**
     * @param {PopStateEvent} event
     */
    handlePopState(event) {
      // User pressed back/forward - close lightbox
      this.closeLightbox();
    }
