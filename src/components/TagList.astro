---
const { tags = [], activeTag = null } = Astro.props;
---
<ul class="flex flex-wrap gap-2 px-6 pb-6 md:px-9">
  {tags.map(tag => (
    <li>
      <a
        class={`inline-flex items-center gap-2 rounded-full border px-4 py-2 text-xs font-semibold uppercase tracking-widest transition hover:-translate-y-0.5 hover:bg-[rgba(67,83,57,0.1)] ${
          activeTag === tag.slug
            ? 'border-[rgba(67,83,57,0.45)] bg-[rgba(67,83,57,0.2)] text-[var(--accent)]'
            : 'border-[rgba(67,83,57,0.28)] bg-white/80 text-[var(--text-muted)]'
        } hover:text-[var(--accent)]`}
  href={`/tag/${tag.slug}`}
      >
        {tag.label}
      </a>
    </li>
  ))}
</ul>
