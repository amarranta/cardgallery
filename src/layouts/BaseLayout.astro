---
import '../styles/global.css';
import { site } from '../data/gallery.js';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.astro';

const {
  title = site.title,
  description = site.description,
  bodyClass = '',
  ogImage: customOgImage,
  hideFooter = false
} = Astro.props;
// Build an absolute-ish URL for social preview images when SITE env is provided.
const siteRoot = import.meta.env.SITE ? String(import.meta.env.SITE).replace(/\/+$/,'') : '';
const basePath = import.meta.env.BASE_URL ? String(import.meta.env.BASE_URL) : '/';
const defaultOgImagePath = `${basePath}og/home.png`;
const defaultOgImage = siteRoot ? `${siteRoot}${defaultOgImagePath}` : defaultOgImagePath;
const ogImage = customOgImage || defaultOgImage;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <!-- Open Graph / Twitter meta -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;500;600;700&family=Work+Sans:wght@400;500;600;700&display=optional"
    />
  <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}assets/img/amarantha-logo.png`} />
  <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}assets/img/amarantha-logo.svg`} />
  <script is:inline>
    // Pre-check locale to prevent flicker
    (function() {
      const saved = localStorage.getItem('locale');
      const locale = saved || (navigator.language.toLowerCase().startsWith('ru') ? 'ru' : 'en');
      
      // Always remove i18n-ready first (for page navigation)
      document.documentElement.classList.remove('i18n-ready');
      
      // For English, mark as ready immediately (no translation needed)
      if (locale === 'en') {
        document.documentElement.classList.add('i18n-ready');
      }
      // For other languages, wait for DOMContentLoaded + localization
    })();
  </script>
  <script is:inline>
    // Theme initialization - prevent flash of wrong theme
    (function() {
      const savedTheme = localStorage.getItem('theme');
      if (savedTheme === 'light') {
        document.documentElement.classList.add('light');
      }
    })();
  </script>
  </head>
  <body class={`bg-linen text-primary ${bodyClass}`}>
    <div class="min-h-screen flex flex-col">
      <div class="flex-1">
        <slot />
      </div>
      {!hideFooter && <Footer />}
    </div>
    <ScrollToTop />
    
    <script>
      import { localizeStaticText } from '../i18n/client';
      
      // Wait for DOM to be ready before localizing
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', () => {
          localizeStaticText();
        });
      } else {
        // DOM already loaded
        localizeStaticText();
      }
    </script>
    
    <script
      data-goatcounter="https://amarranta.goatcounter.com/count"
      async
      src="//gc.zgo.at/count.js"
    ></script>
  </body>
</html>
