---
import '../styles/global.css';
import { site } from '../data/gallery.js';

const {
  title = site.title,
  description = site.description,
  bodyClass = ''
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  <link rel="icon" type="image/png" href={`${import.meta.env.BASE_URL}assets/img/amarantha-logo.png`} />
  <link rel="icon" type="image/svg+xml" href={`${import.meta.env.BASE_URL}assets/img/amarantha-logo.svg`} />
  </head>
  <body class={`bg-[var(--linen)] text-[var(--text-primary)] ${bodyClass}`}>
    <div class="min-h-screen">
      <slot />
    </div>
  </body>
</html>
